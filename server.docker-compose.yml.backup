version: '3.8'

services:
  makis-server:
    build:
      context: .
      dockerfile: Dockerfile.server
    ports:
      - '4010:4010'
    env_file:
      - .env
    restart: unless-stopped
    environment:
      - NODE_ENV=production
      - SERVER_PORT=4010
    healthcheck:
      test: ['CMD', 'curl', '-f', 'http://localhost:4010/health']
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
